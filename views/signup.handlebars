<div action="" class="box is-shadowless">
  <h1 class="title">Sign up:</h1>
  <div class="card">
    <div class="card-content">
      <div class="field">
        <label for="" class="label">Username</label>
        <div class="control has-icons-left">
          <input id="username-signup" type="username" class="input" required>
          <span class="icon is-small is-left">
            <i class="fa fa-envelope"></i>
          </span>
        </div>
      </div>
      <div class="field">
        <label for="" class="label">Password</label>
        <div class="control has-icons-left">
          <input id="password-signUp" type="password" placeholder="*******" class="input" required>
          <span class="icon is-small is-left">
            <i class="fa fa-lock"></i>
          </span>
        </div>
      </div>
      <div class="field">
        <label for="" class="checkbox">
          <input type="checkbox">
          Remember me
        </label>
      </div>
  <div class="card">
    <div class="card-content">
      <div class="field buttons">
        <button id="signUpBtn" class="button is-Login is-fullwidth"> <!-- why is the signup button class is-Login? -->
          <span class="icon">
            <i class="Login"></i> <!-- why Login class? -->
          </span>
          <span>Sign Up</span>
        </button>
      </div>
    </div>
  </div>
</div>
<script src="/js/signup.js"></script>